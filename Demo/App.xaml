<Application x:Class="Demo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Demo"
             StartupUri="MainWindow.xaml">
    <!--Make the resource available to all the windows in the application-->
    <Application.Resources>
        <SolidColorBrush x:Key="MainBackground" Color="LightBlue"/>
        <SolidColorBrush x:Key="SecondBackground" Color="Aquamarine"/>
        
        <!--Genaric style apply on all buttons in all windows-->
        <Style TargetType="Button">
            <Setter Property="Height" Value="70"/>
            <!--<Setter Property="Padding" Value="90"/>-->
        </Style>
    </Application.Resources>
</Application>
