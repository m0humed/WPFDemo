<Window x:Class="Demo.Panels"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Panels" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!--make stackPanel Top left-->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="3">
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
        </StackPanel>
        
        <WrapPanel Grid.Row="0" Grid.Column="1" Margin="3">
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
        </WrapPanel>


        <Canvas Grid.Row="1" Grid.Column="0" Margin="3">
            <Button Content="Button" Width="150" HorizontalAlignment="Left" Canvas.Top="70" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" Canvas.Left="150" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" Canvas.Right="90" Canvas.Bottom="70"  />
            <Button Content="Button" Width="150" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" Canvas.Bottom="0" />
        </Canvas>

        <DockPanel Grid.Row="1" Grid.Column="1" Margin="3">
            <Button Content="Button"   DockPanel.Dock="Top" Background="LightPink" />
            <Button Content="Button" Height="200"   DockPanel.Dock="Left" Background="Chartreuse"/>
            <Button Content="Button"   DockPanel.Dock="Bottom" Background="DarkCyan"/>
            <Button Content="Button"   DockPanel.Dock="Right" Background="Black" />
            <Button Content="Button"   DockPanel.Dock="Top"  Background="Aqua"/>
        </DockPanel>
    </Grid>
</Window>
