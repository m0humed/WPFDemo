<Window x:Class="Demo.Panels"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Panels" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!--make stackPanel Top left-->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="3">
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
        </StackPanel>
        <WrapPanel Grid.Row="0" Grid.Column="1" Margin="3">
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
            <Button Content="Button" Width="150" HorizontalAlignment="Left" />
        </WrapPanel>
    </Grid>
</Window>
